<!-- tt-mobile-header -->
<div class="tt-mobile-header tt-mobile-header-inline tt-mobile-header-inline-stuck{% unless item.header_sticky_header %} disabled{% endunless %}">
  <div class="container-fluid">
    <div class="tt-header-row">
      <div class="tt-mobile-parent-menu">
        <div class="tt-menu-toggle mainmenumob-js">
          <img id="skill_web_ham" src="https://cdn.shopify.com/s/files/1/0568/1945/0045/files/Hamburger_Menu_24x24.webp?v=1726901450" loading="lazy" width="25" height="25" alt=""  srcset="https://cdn.shopify.com/s/files/1/0568/1945/0045/files/Hamburger_Menu_24x24.webp?v=1726901450" >
        </div>
      </div>
      
      <div class="tt-logo-container">
        <a class="tt-logo tt-logo-alignment mob--menu--logo" href="{{ routes.root_url }}" aria-label="logoskillmatics">
          {%- if headerlogomobile contains "title_" -%}<h2>{{ headerlogomobile | split:"title_" | last }}</h2>
          {%- else -%}<img id="skill_logo" src="{{ headerlogomobile }}"
                           srcset="{{ headerlogomobile }} 1x, {{ headerlogomobileretina }} 2x"
                           alt="{{ headerlogomobilealt }}"
                           class="tt-retina" width="101px" height="30px" loading="lazy" >
          {%- endif -%}
        </a>
      </div>
      
      <div class="tt-mobile-parent-menu-icons">
        <a class="whatsapp-icon-head  desktop-only" href="https://wa.me/+918422822545">
          {% render 'whatsapp-icon' %}
        </a>
        <!-- search -->
        <div class="tt-mobile-parent-search tt-parent-box">
          {%- if settings.header_design != "header_type_1" and settings.header_design != "header_type_5" -%}
          <!-- tt-search -->
          <div class="tt-search tt-dropdown-obj">
            <button class="tt-dropdown-toggle"
                    data-tooltip="{{ 'general.tooltip_texts.header_search' | t }}"
                    data-tposition="bottom"
                    >
                    <img id="skill_search" src="https://cdn.shopify.com/s/files/1/0568/1945/0045/files/search.webp?v=1726898063" alt="" srcset="https://cdn.shopify.com/s/files/1/0568/1945/0045/files/search.webp?v=1726898063" >
            </button>
            <div class="tt-dropdown-menu">
              <div class="container">
                <form action="{{ routes.search_url }}" method="get" role="search">
                  <div class="tt-col">
                    <input type="hidden" name="type" value="product" />
                    <input id="skill_search_type" class="tt-search-input"
                           type="search"
                           name="q"
                           placeholder="{{ 'general.search.place_holder' | t }}"
                           aria-label="{{ 'general.search.place_holder' | t }}">
                    <button type="submit" class="tt-btn-search"></button>
                  </div>
                  <div class="tt-col">
                    <button class="tt-btn-close icon-f-84"></button>
                  </div>
                  <div class="tt-info-text">{{ 'general.search.header_message' | t }}</div>
                </form>
              </div>
            </div>
          </div>
          <!-- /tt-search -->
          {%- endif -%}
        </div>
        <!-- /search -->
        
        {%- unless settings.catalogue_mode -%}
        {%- if template != "cart" -%}
        <!-- cart -->
        <div id="skill_cart" class="tt-mobile-parent-cart tt-parent-box"></div>
        <!-- /cart -->
        {%- endif -%}
        {%- endunless -%}
      </div>

      {% comment %}
      
      {%- if item.show_customer_links -%}
      <!-- account -->
      <div class="tt-mobile-parent-account tt-parent-box"></div>
      <!-- /account -->
      {%- endif -%}
      {%- if item.show_options_links -%}
      <!-- currency -->
      <div class="tt-mobile-parent-multi tt-parent-box"></div>
      <!-- /currency -->
      {%- endif -%}
      
      {% endcomment %}
      
    </div>
  </div>
</div>