                {% if pprice > fprice %}
                  {% if settings['free-gift-img'] != blank %}
                    <img                      
                      src="{{ settings.free-gift-img | img_url:'250x' }}"
                      width="100%"
                      height="40px"
                      alt="freegift"
                      class="freegift_badge"
                    srcset="{{ settings.free-gift-img | img_url:'250x' }}"
                    >
                  {% endif %}
                {% endif %}

