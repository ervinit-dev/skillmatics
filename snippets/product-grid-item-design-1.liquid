                  {% endcomment %}
                </span>
              </div>
            {%- else -%}
              <div class="tt-price">
                <span>{{ pr_variant.price | money }}</span><span class="old-price hide"></span>
              </div>
            {%- endif -%}
          {%- endunless -%}

          <div class="description" style="display:none;">
            {%- if product_meta.small_description != blank -%}
              {{ product_meta.small_description }}
            {%- else -%}
              {{
                product.description
                | strip
                | strip_html
                | truncatewords: settings.truncate_product_description,
                  settings.truncate_product_description_last_symbols
              }}
            {%- endif -%}
          </div>

