                  <span class="textsaletag rr">
                    <img class="offer-code" src="{{ 'calloutimg.svg' | asset_url }}" alt="discounttag" width="18px" height="18px" > <b>Flat 20% OFF</b> | &nbsp; {{- settings['get-it-at5'] }}
                    <b>{{ pr_variant.price | times: per-amt5 | money }}</b> | <br> </span>
                  <span class="textsaletag">
                    {{ settings.usecode5 }}
                  </span>
                </div>
              {% endif %}{% endif %}
            {% endcomment %}
          </div>
        </a>
        {%- unless settings.catalogue_mode -%}
          {% comment %}   {%- if product.available -%} {% endcomment %}
          {%- if settings.product_item_show_cart or settings.product_item_show_quickview -%}
