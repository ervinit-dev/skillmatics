                      <span
                        ><img
                          class="offer-code"
                          src="{{'calloutimg.svg' |asset_url }}"
                          alt="discounttag"
                          width="18px"
                          height="18px"
                      ></span>
                      <span class="textsaletag ">
                        {{- settings['get-it-at4'] }}
                        <b>{{ pr_variant.price | times: per-amt4 | money }}</b>
                        <br>
                        {{ settings.usecode4 }}
                      </span>
                    </div>
                  {% endif %}
                {% endif %}
              {% endif %}
