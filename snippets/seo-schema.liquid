{% if template.name == 'index' %}
  <script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Skillmatics",
  "url": "https://skillmatics.in/",
  "logo": "https://www.skillmatics.in/cdn/shop/files/Skillmatics_Logo_RGB_Skillmatics_Logo_Horizontal_NewBlue_1d81c4_1_140x.webp?v=1690276402",
  "sameAs": [
    "https://www.facebook.com/skillmaticsworld",
    "https://www.instagram.com/skillmaticsindia/",
    "https://twitter.com/MySkillmatics"
  ],
  "contactPoint": [
    {
      "@type": "ContactPoint",
      "telephone": "+91-9152331018",
      "contactType": "customer service",
      "email": "help@skillmatics.in"
    }
  ]
}
</script>
{% endif %}
{% if template.name == 'collection' %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "ItemList",
      "itemListElement": [
       {
          "@type": "ListItem",
          "position":1,
          "name": "{{ collection.title }}",
          "url": "{{ collection.url }}"
        },
       {%- assign posi= '1'-%}
       {%- for product in collection.products limit: 2-%}
         {%- assign posi= posi | plus:1-%}
        {
          "@type": "ListItem",
          "position": {{ posi }},
          "name": "{{ product.title }}",
          "url": "{{ product.url }}"
        },{% endfor %}
        {
          "@type": "ListItem",
          "position": 4,
          "name": "Guess in 10: Animal Kingdom | Trivia card game (ages 6+)",
          "url": "https://www.skillmatics.in/products/guess-in-10-animal-kingdom-card-game-of-smart-questions-skill118gak"
        }

      ]
    }
  </script>
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "CollectionPage",
      "url": "https://www.skillmatics.in/collections/{{ collection.handle }}",

        "image": {
          "@type": "ImageObject",
          "height": 224,
          "url": "https://www.skillmatics.in/cdn/shop/files/Skillmatics_Logo_RGB_Skillmatics_Logo_Horizontal_NewBlue_1d81c4_1_140x.webp?v=1690276402",
          "width": 224
        },

      "name": "{{ collection.title }}"
    }
  </script>

  <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{ shop.url }}"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "{{ collection.title }}",
        "item": "{{ shop.url | append: collection.url }}"
      }]
    }
  </script>
{% endif %}
