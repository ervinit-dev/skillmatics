{% layout none %}
{%- assign handles = collection.sort_by | split: '||' -%}

<div class="tt-carousel-products row arrow-location-right-top tt-alignment-img tt-layout-product-item tt-recently-products-js">
  {%- for handle in handles -%}
  {%- assign product = all_products[handle] -%}
     {%- assign pprice = product.price | divided_by: 100 -%}   
     {% unless product.title contains 'Free Gift' %}
      {% if pprice > 2 or product.available %}
  <div class="col-2 col-md-4 col-lg-3  {% if pprice < 2 %} hide{% endif %}">{%- include 'product-grid-item' -%}</div>
            {% endif %}{% endunless %}
  {%- endfor -%}
</div>